<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".fragments.MeaningFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/meaning_back"
            android:orientation="vertical">

            <TextView
                android:id="@+id/meaning_name"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/background"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="@string/dilshodbek"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meaning_gender"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="@string/dilshodbek"
                android:textAlignment="center"
                android:textColor="@color/text_color" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/meaning_meaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="20dp"
                android:text="@string/dilshodbek"
                android:textColor="@color/black"
                android:textSize="@dimen/name_list_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/meaning_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:textColor="@color/magic_mint"
                android:textStyle="bold"
                android:text="@string/dilshodbek" />

            <ImageView
                android:id="@+id/photo_m"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/boy1"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_margin="30dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/share_m"
                    android:layout_width="50dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/sharing_m"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/like_m"
                    android:layout_width="50dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_liked"
                    android:layout_height="50dp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>